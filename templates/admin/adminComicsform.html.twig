{% extends "admin/adminBase.html.twig" %}

{% block main %}
	<div class="container">
		<div class="card" style="width: 50%;">
			<img src="https://picsum.photos/450/250" class="card-img-top" alt="...">
			<div class="card-body">
				{{form_start(comicsForm)}}

				{{form_label(comicsForm.title, 'Titre')}}
				{{form_widget(comicsForm.title)}}
				<hr>
				{{form_label(comicsForm.title, 'Description')}}
				{{form_widget(comicsForm.description)}}
				<hr>
				{{form_label(comicsForm.title, 'Year')}}
				{{form_widget(comicsForm.year)}}
				<hr>
				{{form_label(comicsForm.title, 'Designer')}}
				{{form_widget(comicsForm.designer)}}

				{{form_label(comicsForm.title, 'Editor')}}
				{{form_widget(comicsForm.editor)}}

				{{form_label(comicsForm.title, 'Writer')}}
				{{form_widget(comicsForm.writer)}}

				{{form_label(comicsForm.title, 'Licence')}}
				{{form_widget(comicsForm.licence)}}
				<hr>
				{{form_label(designerForm.image, 'Image')}}
				{{form_widget(designerForm.image)}}
				<hr>
				{{form_widget(comicsForm.Soumettre)}}

				{{form_end(comicsForm)}}
			</div>
		</div>
	</div>

{% endblock %}
